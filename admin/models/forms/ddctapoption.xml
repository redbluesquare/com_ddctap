<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="options_main">
		<field
			name="ddctap_option_id"
			type="text"
			label="COM_DDCTAP_PROFILE_TABLE_LABEL"
			description="COM_DDCTAP_PROFILE_TABLE_DESC"
			default="profile"
		/>
		<field
			name="title"
			type="text"
			label="COM_DDCTAP_PROFILE_TABLE_LABEL"
			description="COM_DDCTAP_PROFILE_TABLE_DESC"
			default="profile"
		/>
		<field
			name="catid"
			type="sql"
			default="0"
			label="COM_DDCTAP_CATEGORY"
			description="COM_DDCTAP_CATEGORY_DESC"
			query="SELECT id AS value, title as catid FROM #__categories where extension = 'com_ddctap' "
		/>
	</fieldset>
	<fieldset name="options_rest">
		<field
			name="table"
			type="text"
			label="COM_DDCTAP_PROFILE_TABLE_LABEL"
			description="COM_DDCTAP_PROFILE_TABLE_DESC"
			hidden="true"
			class="hidden"
			default="ddctapoptions"
		/>
		
	</fieldset>
</form>
